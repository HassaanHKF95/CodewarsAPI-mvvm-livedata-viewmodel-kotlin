<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navgraph"
    app:startDestination="@id/challengeListFragment">

    <fragment
        android:id="@+id/challengeListFragment"
        android:name="com.hassan.codewars.presentation.fragments.ChallengeListFragment"
        android:label="ChallengeListFragment" >

        <action
            android:id="@+id/list_to_detail"
            app:destination="@id/challengeDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/challengeDetailFragment"
        android:name="com.hassan.codewars.presentation.fragments.ChallengeDetailFragment"
        android:label="ChallengeDetailFragment" >
        <argument
            android:name="challenge"
            app:argType="com.hassan.codewars.presentation.models.ChallengesListModel" />
    </fragment>
</navigation>